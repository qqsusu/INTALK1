<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimaryActivity">

    <ImageButton
        android:id="@+id/button_top_Left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_top_Right"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_rectangle_topleft"
        />
    <ImageView
        android:layout_width="138dp"
        android:layout_height="134dp"
        android:src="@drawable/astronaut"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_top_Right"
        app:layout_constraintTop_toTopOf="@+id/button_top_Left"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個人檔案"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_top_Right"
        app:layout_constraintTop_toTopOf="@+id/button_top_Left"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5"
        />


    <ImageButton
        android:id="@+id/button_top_Right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_rectangle_topright"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Right"
        app:layout_constraintLeft_toRightOf="@+id/button_top_Left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="138dp"
        android:layout_height="134dp"
        android:src="@drawable/ufo"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_top_Left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_bottom_Right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_top_Left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5"
        />



    <ImageButton
        android:id="@+id/button_bottom_Left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_top_Left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_bottom_Right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_rectangle_bottomleft"/>
    <ImageView
        android:layout_width="138dp"
        android:layout_height="134dp"
        android:src="@drawable/project"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_bottom_Right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_top_Left"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始聊天"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_bottom_Right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_top_Left"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5"
        />


    <ImageButton
        android:id="@+id/button_bottom_Right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_top_Right"
        app:layout_constraintLeft_toRightOf="@+id/button_bottom_Left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_rectangle_bottomright"/>

    <ImageView
        android:layout_width="138dp"
        android:layout_height="134dp"
        android:src="@drawable/settings"
        app:layout_constraintTop_toBottomOf="@+id/button_top_Right"
        app:layout_constraintLeft_toRightOf="@+id/button_bottom_Left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_bottom_Left"
        app:layout_constraintTop_toBottomOf="@id/button_top_Right"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.5"
        />

</android.support.constraint.ConstraintLayout>